{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "Node",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src/**/*"]
}
