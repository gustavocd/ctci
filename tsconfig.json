{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "target": "es6",
    "module": "es6",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["*"]
    },
    "types" : ["jest"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": [
    "./src/**/*"
  ]
}
